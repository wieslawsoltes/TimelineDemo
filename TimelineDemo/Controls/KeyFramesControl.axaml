<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:TimelineDemo.Controls">
  <Design.PreviewWith>
    <controls:KeyFramesControl Value="100" Width="400" />
  </Design.PreviewWith>

  <Style Selector="controls|KeyFramesControl">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="Height" Value="20" />
    <Setter Property="Template">
      <ControlTemplate>
        <Canvas x:Name="PART_Canvas" 
                Background="{TemplateBinding Background}" 
                Height="{TemplateBinding Height}">
          <Thumb x:Name="PART_Thumb" 
                 Canvas.Left="0" 
                 Canvas.Top="0" 
                 Margin="-5,0,-5,0" 
                 Height="{TemplateBinding Height}">
            <Thumb.Styles>
              <Style Selector="Thumb:pointerover">
                <Setter Property="Cursor" Value="SizeWestEast" />
              </Style>
            </Thumb.Styles>
            <Thumb.Template>
              <ControlTemplate>
                <Panel Background="Transparent">
                  <Path Fill="#FF000000"
                        Data="M 0,9 L 0,4 L 5,0 L 10,4 L 10,9 Z" 
                        VerticalAlignment="Bottom" />
                </Panel>
              </ControlTemplate>
            </Thumb.Template>
          </Thumb>
        </Canvas>
      </ControlTemplate>
    </Setter>
  </Style>

</Styles>
